<h1>Listing quests</h1>

<table>
  <tr>
    <th>Offered by</th>
    <th>Title</th>
    <th>Body</th>
    <th>Available</th>
    <th>Completed</th>
    <th>Completed by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @quests.each do |quest| %>
  <tr>
    <td><%= quest.offered_by %></td>
    <td><%= quest.title %></td>
    <td><%= quest.body %></td>
    <td><%= quest.available %></td>
    <td><%= quest.completed %></td>
    <td><%= quest.completed_by %></td>
    <td><%= link_to 'Show', quest %></td>
    <td><%= link_to 'Edit', edit_quest_path(quest) %></td>
    <td><%= link_to 'Destroy', quest, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Quest', new_quest_path %>
