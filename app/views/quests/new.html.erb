<h1>Create a New Quest</h1>

<%= form_for(@quest) do |f| %>
  <% if @quest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@quest.errors.count, "error") %> prohibited this quest from being saved:</h2>

      <ul>
      <% @quest.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
	<p>What is your name?</p>
    <%= f.label :offered_by, "Quest offered by" %><br />
    <%= f.text_field :offered_by %>
  </div>
  <div class="field">
	<p>Short summary or title of your quest</p>
    <%= f.label :title, "Title of the quest" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
	<p>Describe your quest in great detail listing any instructions to achieve quest completion</p>
    <%= f.label :body, "Quest Details" %><br />
    <%= f.text_area :body %>
  </div>
	<div class="field">
	<p>How much reward do you want to exchange?</p>
    <%= f.label :reward %><br />
    <%= f.text_field :reward %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', quests_path %>
